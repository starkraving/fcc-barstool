extends layout

block content
	h2  Change Location
	p Use the form below to change your saved location
		form(action="/account/location", method="post")
			section.form-group
				label(for="location") Location:
				input.form-control(type="text", name="location", value=location)
			button.btn.btn-primary(type="submit") Continue
			a.btn.btn-default(href="/account") Back